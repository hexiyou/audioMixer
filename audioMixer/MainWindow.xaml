<Window x:Class="audioMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:audioMixer"
        mc:Ignorable="d"
        Title="Audio Mixer" Height="480" MinHeight="480" Width="640" MinWidth="640">
    <DockPanel>
        
        <TextBlock Name="TitleText" Text="Audio Mixer" DockPanel.Dock="Top" Foreground="Blue" HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="48">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="4" Direction="330" Color="Black" Opacity="0.5" BlurRadius="4"/>
            </TextBlock.Effect>
        </TextBlock>
        
        <Grid Name="BottomControls" DockPanel.Dock="Bottom" Height="60">
            
            <Canvas Name="PlayAll" >
                <local:CustomButton
                    ButtonType="Play" 
                    ButtonBackgroundColor="Blue" 
                    ContentColor="DarkGray" 
                    Size="40"
                    Canvas.Left="10" 
                    Canvas.Bottom="10"
                    />
            </Canvas>

            <Canvas Name="StopAll">
                <local:CustomButton
                    ButtonType="Stop" 
                    ButtonBackgroundColor="Blue" 
                    ContentColor="DarkGray" 
                    Size="40"
                    Canvas.Left="60" 
                    Canvas.Bottom="10"
                    />
            </Canvas>

            <Canvas Name="PauseAll">
                <local:CustomButton
                    ButtonType="Pause" 
                    ButtonBackgroundColor="Blue" 
                    ContentColor="DarkGray" 
                    Size="40"
                    Canvas.Left="110" 
                    Canvas.Bottom="10"
                    />
            </Canvas>

            <Canvas Name="AddTrack">
                <local:CustomButton
                    ButtonType="AddTrack" 
                    ButtonBackgroundColor="Blue" 
                    ContentColor="DarkGray" 
                    Size="40"
                    Canvas.Right="10" 
                    Canvas.Bottom="10"
                    />
            </Canvas>
            
        </Grid>

        <Grid Name="Tracks">
            
                

        </Grid>

        

    </DockPanel>
    
</Window>
